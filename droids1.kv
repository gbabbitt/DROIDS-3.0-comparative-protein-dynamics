<MyLayout>
    GridLayout:
        cols:1
        size: root.width-200, root.height-200
        pos: 100, 100
        Label:
            text: 'DROIDS - Direct Pairwise Comparative Analyses of Protein Dynamics'
            font_size: 22
            size_hint: 0.5, 0.2
            bold: True
            color: 0.9, 0.1, 0.9, 1
        Label:
            text: 'GPL3 license - GA Babbitt Lab at Rochester Institute of Technology'
            font_size: 16
            size_hint: 0.3, 0.1    
        GridLayout:
            cols:1
            Image:
                source: 'droid.png'
            GridLayout:
                cols:1
                ToggleButton:
                    id: btn00
                    text: "single GPU mode - (run MD query and reference on same GPU card)"
                    bold: True
                    state: 'normal'
                    on_state: root.btn00()
                    off_state: root.btn00()
                    size_hint: 0.5, 0.3
                    color: 0.9, 0.7, 0.1, 1
                    
                ToggleButton:
                    id: btn0
                    text: "dual GPU mode - (run MD query and reference on 2 independent GPU cards)"
                    bold: True
                    state: 'normal'
                    on_state: root.btn0()
                    off_state: root.btn00()
                    size_hint: 0.5, 0.3
                    color: 0.9, 0.7, 0.1, 1
                Label:
                    text: ''
                    font_size: 16
                    size_hint: 0.3, 0.1     
                GridLayout:
                    cols:2 
                    Button:
                        id: btn1
                        text: "compare protein at two temperatures"
                        on_press: btn1.background_color=(0.9, 0.1, 0.9, 1)
                        on_press: root.btn1()
                    Button:
                        id: btn2
                        text: "compare two evolutionary homologs"   
                        on_press: btn2.background_color=(0.9, 0.1, 0.9, 1)
                        on_press: root.btn2()
                    Button:
                        id: btn3
                        text: "compare two DNA-protein interactions"   
                        on_press: btn3.background_color=(0.9, 0.1, 0.9, 1)
                        on_press: root.btn3()
                    Button:
                        id: btn4
                        text: "compare two protein-ligand interactions"   
                        on_press: btn4.background_color=(0.9, 0.1, 0.9, 1)
                        on_press: root.btn4()
                        